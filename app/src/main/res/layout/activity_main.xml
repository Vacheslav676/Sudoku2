<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:navigationBarColor="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="118dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Sudoku!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TextXcoord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TextXcoord"/>
        <Button
                android:text="X coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonXcoord"/>
        <TextView
                android:text="TextYcoord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TextYcoord"/>
        <Button
                android:text="Y coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonYcoord"/>
        <TextView
                android:text="TextValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonValues"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>