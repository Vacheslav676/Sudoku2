<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:navigationBarColor="@android:color/white"
            android:orientation="vertical"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="118dp">


        <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="98dp">
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="0"
                    android:id="@+id/textView00"
            />
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="1"
                    android:id="@+id/textView01"/>

            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="2"
                    android:id="@+id/textView02"/>

            <TextView
                    android:text="0"
                    style="@style/simpleTextView2" app:layout_row="0" app:layout_column="3"
                    android:id="@+id/textView03"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView2"
                    app:layout_row="0" app:layout_column="4"
                    android:id="@+id/textView04"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView2"
                    app:layout_row="0" app:layout_column="5"
                    android:id="@+id/textView05"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="6"
                    android:id="@+id/textView06"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="7"
                    android:id="@+id/textView07"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="0" app:layout_column="8"
                    android:id="@+id/textView08"/>

            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="1" app:layout_column="0"
                    android:id="@+id/textView10"/>

            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="1" app:layout_column="1"
                    android:id="@+id/textView11"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="1" app:layout_column="2"
                    android:id="@+id/textView12"/>

            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="2" app:layout_column="0"
                    android:id="@+id/textView20"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="2" app:layout_column="1"
                    android:id="@+id/textView21"/>
            <TextView
                    android:text="0"
                    style="@style/simpleTextView1"
                    app:layout_row="2" app:layout_column="2"
                    android:id="@+id/textView22"/>


        </android.support.v7.widget.GridLayout>





    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Sudoku!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TextXcoord"/>
        <Button
                android:text="X coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonXcoord"/>
        <EditText
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TextYcoord"/>
        <Button
                android:text="Y coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonYcoord"/>
        <EditText
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewValueNumber"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:onClick="writeANumber"
                android:layout_height="wrap_content" android:id="@+id/buttonValues"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>